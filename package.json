{
  "name": "codetree-cli",
  "version": "1.0.0",
  "description": "A powerful CLI tool for generating code structure visualization with smart configuration",
  "main": "codetree.js",
  "bin": {
    "codetree": "./codetree.js"
  },
  "scripts": {
    "start": "node codetree.js",
    "lint": "eslint .",
    "test": "jest",
    "prepare": "chmod +x codetree.js",
    "format": "prettier --write .",
    "prepublishOnly": "npm test && npm run lint",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "code",
    "tree",
    "visualization",
    "directory",
    "structure",
    "analysis",
    "cli",
    "development",
    "documentation",
    "file-system",
    "source-code",
    "project-structure"
  ],
  "author": "Mostafa Alahyari <mostafa.a.aut@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mimalef70/codetree.git"
  },
  "bugs": {
    "url": "https://github.com/mimalef70/codetree/issues"
  },
  "homepage": "https://github.com/mimalef70/codetree#readme",
  "dependencies": {
    "glob": "^8.0.0",
    "minimatch": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.0.0"
  },
  "files": [
    "src/",
    "codetree.js",
    "install.sh",
    "uninstall.sh",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true
}